# Server Configuration
PORT=3001
FRONTEND_URL=http://localhost:4321

# Authentication (JWT based)
# Access tokens (15m) signed with JWT_SECRET; refresh tokens (7d) with REFRESH_TOKEN_SECRET.
# CHANGE THESE IN YOUR REAL .env (do not reuse example values) and keep them long & random.
JWT_SECRET=dev-access-token-secret-change-this
REFRESH_TOKEN_SECRET=dev-refresh-token-secret-change-this
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Google OAuth
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Email Service (Gmail / SMTP)
# IMPORTANT: Do NOT commit real secrets. Use an App Password for Gmail (Account -> Security -> 2FA enabled -> App Passwords)
# After generating the 16 character app password, set it in your local .env (NOT this example file).
EMAIL_SERVICE=gmail
EMAIL_USER=h1hivequeries@gmail.com
EMAIL_APP_PASSWORD=
EMAIL_FROM=h1hivequeries@gmail.com
# Recipient for contact form submissions (defaults to EMAIL_CONTACT_TO -> CONTACT_EMAIL_TO -> EMAIL_USER)
CONTACT_EMAIL_TO=h1hivequeries@gmail.com
# Optional alternative key name supported by code
EMAIL_CONTACT_TO=h1hivequeries@gmail.com

# Encryption for GDPR compliance
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-this

# Database Configuration
# Individual database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=H1Hive13
DB_NAME="H1 Hive"
DB_SCHEMA=public

# Complete Database URL (Prisma format)
# You can either set DATABASE_URL directly OR use the individual DB_* variables above
# Format: postgresql://USER:PASSWORD@HOST:PORT/DB_NAME?schema=SCHEMA
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=${DB_SCHEMA}

# (Legacy JSON fallback still referenced in some code paths; will be phased out after migration)
DATABASE_PATH=./data/database.json

# GDPR Compliance
DATA_RETENTION_DAYS=2555  # 7 years
COOKIE_CONSENT_REQUIRED=true

# Verification Code Settings
CODE_EXPIRY_MINUTES=15
CODE_COOLDOWN_SECONDS=90
MAX_CODE_ATTEMPTS=5