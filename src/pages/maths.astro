---
import Layout from '~/layouts/PageLayout.astro';
const metadata = {
  title: 'Maths Subject',
};

const widgets = [
  {
    name: 'Learn',
    icon: 'tabler:book',
    description: 'Review key concepts, formulas, and summaries for Leaving Cert Maths.',
    href: '/maths/learn',
    bgColor: 'bg-red-100',
    darkBgColor: 'dark:bg-red-900',
  },
  {
    name: 'Practice',
    icon: 'tabler:edit',
    description: 'Test your skills with exam-style practice questions and solutions.',
    href: '/maths/practice',
    bgColor: 'bg-red-200',
    darkBgColor: 'dark:bg-red-700',
  },
  {
    name: 'Blogs',
    icon: 'tabler:article',
    description: 'Read articles, tips, and updates to help you excel in Maths.',
    href: '/maths/blogs',
    bgColor: 'bg-red-300',
    darkBgColor: 'dark:bg-red-600',
  },
];
---
<Layout metadata={metadata}>
  <section class="py-12">
    <div class="max-w-3xl mx-auto px-4 md:px-6 text-center">
      <h1 class="text-4xl font-bold mb-4">Maths</h1>
      <p class="text-lg text-gray-700 dark:text-gray-300 mb-8">
        Welcome to the Maths subject page! Choose a resource below to get started.
      </p>
      <a href="/homes/saas" class="inline-block text-blue-600 dark:text-blue-400 underline hover:text-blue-800 dark:hover:text-blue-200 transition">&larr; Back to Subjects</a>
    </div>
    <div class="max-w-7xl mx-auto px-4 md:px-8 mt-16">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        {widgets.map(widget => (
          <a href={widget.href} class={`group flex flex-col items-center justify-center p-12 bg-white dark:bg-slate-800 rounded-2xl shadow-lg hover:shadow-2xl transition hover:bg-blue-50 dark:hover:bg-slate-700 text-center ${widget.bgColor} ${widget.darkBgColor}`}
            style="min-height: 320px;">
            <div class="flex items-center justify-center w-24 h-24 mb-6 rounded-full bg-white dark:bg-slate-900 shadow-lg">
              <svg class="w-12 h-12 text-blue-600 dark:text-blue-300" fill="none" stroke="currentColor" stroke-width="2">
                <use href={`#${widget.icon}`} />
              </svg>
            </div>
            <span class="font-semibold text-2xl text-gray-900 dark:text-white mb-4">{widget.name}</span>
            <span class="text-lg text-gray-600 dark:text-gray-300">{widget.description}</span>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout> 