---
export interface Props {
  kind?: "note" | "tip" | "important" | "warning";
  title?: string;
}
const palette = {
  note: ["border-neutral-300 dark:border-neutral-700 bg-neutral-50/70 dark:bg-neutral-800/40", "text-neutral-800 dark:text-neutral-100"],
  tip: ["border-emerald-200 dark:border-emerald-900 bg-emerald-50/60 dark:bg-emerald-900/20", "text-emerald-900 dark:text-emerald-100"],
  important: ["border-indigo-200 dark:border-indigo-900 bg-indigo-50/60 dark:bg-indigo-900/20", "text-indigo-900 dark:text-indigo-100"],
  warning: ["border-orange-200 dark:border-orange-900 bg-orange-50/60 dark:bg-orange-900/20", "text-orange-900 dark:text-orange-100"],
};
const { kind = "note", title } = Astro.props;
const [box, text] = palette[kind];
---
<div class={`rounded-xl border ${box} p-4`}>
  {title && <div class={`mb-1 font-semibold ${text}`}>{title}</div>}
  <div class="prose dark:prose-invert max-w-none"><slot /></div>
</div>
