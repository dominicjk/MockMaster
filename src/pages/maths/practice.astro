---
import Layout from '~/layouts/PageLayout.astro';
const metadata = {
  title: 'Maths - Practice',
};
---
<Layout metadata={metadata}>
  <section class="py-12">
    <div class="max-w-4xl mx-auto px-4 md:px-6">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold mb-4">Practice Maths</h1>
        <p class="text-lg text-gray-700 dark:text-gray-300 mb-8">
          Test your skills with exam-style practice questions and solutions.
        </p>
        <a href="/maths" class="inline-block text-blue-600 dark:text-blue-400 underline hover:text-blue-800 dark:hover:text-blue-200 transition">&larr; Back to Maths</a>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-lg">
          <h2 class="text-2xl font-bold mb-4 text-red-600 dark:text-red-400">Algebra</h2>
          <p class="text-gray-700 dark:text-gray-300 mb-4">
            Practice solving equations, inequalities, and algebraic expressions.
          </p>
          <button class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition">
            Start Practice
          </button>
        </div>
        
        <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-lg">
          <h2 class="text-2xl font-bold mb-4 text-red-600 dark:text-red-400">Geometry</h2>
          <p class="text-gray-700 dark:text-gray-300 mb-4">
            Work with shapes, angles, and geometric proofs.
          </p>
          <button class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition">
            Start Practice
          </button>
        </div>
        
        <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-lg">
          <h2 class="text-2xl font-bold mb-4 text-red-600 dark:text-red-400">Calculus</h2>
          <p class="text-gray-700 dark:text-gray-300 mb-4">
            Practice differentiation, integration, and calculus applications.
          </p>
          <button class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition">
            Start Practice
          </button>
        </div>
        
        <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-lg">
          <h2 class="text-2xl font-bold mb-4 text-red-600 dark:text-red-400">Statistics</h2>
          <p class="text-gray-700 dark:text-gray-300 mb-4">
            Practice probability, data analysis, and statistical methods.
          </p>
          <button class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition">
            Start Practice
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout> 