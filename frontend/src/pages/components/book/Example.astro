---
export interface Props { title?: string; id?: string; number?: string; }
const { title = "Example", id, number } = Astro.props;
---
<section id={id} class="rounded-xl border border-sky-200 dark:border-sky-900 bg-sky-50/60 dark:bg-sky-900/20 p-5 leading-relaxed">
  <header class="mb-2 font-semibold text-sky-900 dark:text-sky-100 tracking-wide">
    {title}{number ? ` ${number}` : ""}
  </header>
  <div class="prose dark:prose-invert max-w-none">
    <slot />
  </div>
</section>
