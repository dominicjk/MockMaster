---
export interface Props { title?: string; id?: string; number?: string; }
const { title = "Theorem", id, number } = Astro.props;
---
<section id={id} class="rounded-xl border border-amber-200 dark:border-amber-900 bg-amber-50/60 dark:bg-amber-900/20 p-5 leading-relaxed">
  <header class="mb-2 font-semibold text-amber-900 dark:text-amber-100 tracking-wide">
    {title}{number ? ` ${number}` : ""}
  </header>
  <div class="prose dark:prose-invert max-w-none">
    <slot />
  </div>
</section>
