---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import { headerData } from '~/navigation';
import Subjects from '~/components/widgets/Subjects.astro';

const metadata = {
  title: 'Subject Page',
};

const subjects = [
  {
    name: 'Maths',
    icon: '/src/assets/images/subject-icons/mathematics_icon.svg',
    bgColor: 'bg-red-100',
    darkBgColor: 'dark:bg-red-900',
    href: '/maths',
  }
  // },
  // {
  //   name: 'Computer Science',
  //   icon: '', // Replace with actual icon path if available
  //   bgColor: 'bg-green-100',
  //   darkBgColor: 'dark:bg-green-900',
  //   href: '#',
  // },
  // {
  //   name: 'Geography',
  //   icon: '', // Replace with actual icon path if available
  //   bgColor: 'bg-yellow-100',
  //   darkBgColor: 'dark:bg-yellow-900',
  //   href: '#',
  // },
  // {
  //   name: 'Applied Maths',
  //   icon: '', // Replace with actual icon path if available
  //   bgColor: 'bg-purple-100',
  //   darkBgColor: 'dark:bg-purple-900',
  //   href: '#',
  // },
];
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Login',
          href: '#',
        },
        {
          variant: 'primary',
          text: 'Sign Up',
          href: '#',
        },
      ]}
      isSticky
    />
  </Fragment>

  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 md:px-6">
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl sm:leading-none font-heading mb-8 text-center">
        Explore Subjects
      </h2>
      <Subjects subjects={subjects} />
    </div>
  </section>

  <section class="py-12">
    <div class="max-w-2xl mx-auto px-4 md:px-6 text-center">
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl sm:leading-none font-heading mb-6">
        More subjects coming soon
      </h2>
      <p class="text-lg text-gray-700 dark:text-gray-300 mb-8">
        We're working hard to add more subjects. If you'd like to get involved or suggest a subject, <a href="mailto:contact@example.com" class="text-blue-600 dark:text-blue-400 underline hover:text-blue-800 dark:hover:text-blue-200 transition">contact us</a>!
      </p>
    </div>
  </section>


</Layout>
