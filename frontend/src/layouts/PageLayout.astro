---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
// import AuthModal from '~/components/ui/AuthModal.astro'; // TEMPORARILY DISABLED

import { headerData, footerData } from '~/navigation';

import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
  bodyClass?: string;
}

const { metadata, bodyClass = '' } = Astro.props;
---

<Layout metadata={metadata} bodyClass={bodyClass}>
  <slot name="header">
    <Header {...headerData} isSticky />
  </slot>
  <main>
    <slot />
  </main>
  <slot name="footer">
    <Footer {...footerData} />
  </slot>
  
  <!-- Authentication Modal - TEMPORARILY DISABLED -->
