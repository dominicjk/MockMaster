---
export interface Props {
  id: string;
  title: string;
  iconSrc?: string;
  iconAlt?: string;
}

const { id, title, iconSrc, iconAlt } = Astro.props as Props;
---
<div class="bg-gray-100 dark:bg-slate-800 rounded-xl p-6 shadow-lg flex flex-col gap-4 min-h-72 h-full cursor-pointer hover:shadow-xl transition-shadow topic-card" data-topic-id={id} data-topic-title={title}>
  <div class="flex items-start justify-between gap-4 min-h-[4rem]">
    <h2 class="flex-1 text-2xl font-bold text-gray-900 dark:text-gray-100">{title}</h2>
    <label class="inline-flex items-center gap-2 cursor-pointer select-none" onclick="event.stopPropagation()">
      <input
        type="checkbox"
        class="topic-checkbox h-5 w-5 accent-gray-600 cursor-pointer"
        name="topics"
        value={id}
        data-topic-id={id}
        data-topic-title={title}
        aria-label={`Select ${title}`}
      />
      <span class="text-sm text-gray-600 dark:text-gray-300">Select</span>
    </label>
  </div>

  <div class="icon-area h-32 dark:bg-slate-700 rounded-lg flex items-center justify-center overflow-hidden">
    {Astro.slots.has('icon') ? (
      <slot name="icon" />
    ) : iconSrc ? (
      <img src={iconSrc} alt={iconAlt ?? title} class="w-full h-full object-contain" loading="lazy" decoding="async" />
    ) : null}
  </div>
</div>

<style>
  .icon-area svg {
    width: 100%;
    height: 100%;
  }
</style> 
